<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="635.66" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Height="29" Margin="118,11,0,0" TextWrapping="Wrap" Text="User Name" VerticalAlignment="Top" Width="154"/>
        <Button x:Name="btnConDis" Content="Connect" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="90" Height="30" Click="Button_Click"/>
        <ListBox x:Name="lbChat" HorizontalAlignment="Left" Height="274" Margin="10,45,0,0" VerticalAlignment="Top" Width="608"/>
        <TextBox x:Name="tbMessage" HorizontalAlignment="Left" Height="78" Margin="10,331,0,0" TextWrapping="Wrap" Text="Enter text..." VerticalAlignment="Top" Width="608" KeyDown="TbMessage_KeyDown"/>

    </Grid>
</Window>
